<%= javascript_include_tag 'kintais' %>
<%= stylesheet_link_tag 'kintais' %>
<%provide(:title, (t 'title.kintai'))%>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <!-- <li><a href="#">基準情報</a></li> -->
  <!-- <li><a href="#">セキュリティ管理</a></li> -->
  <li><%= link_to 'カレンダー', events_path %></li>
  <li class="active">勤怠</li>
</ol>
<%= form_for :kintai, url: kintais_path, html: {class:'form-inline'}, method: :get do |f|%>
<%= render 'header', f:f %>
<table  id="kintai-table" class="table  table-bordered table-hover table-height" cellspacing="0" >
  <thead>
  <tr>
    <th rowspan="2">日付</th>
    <th rowspan="2">曜日</th>
    <th rowspan="2" style="width: 100px">タイプ</th>
    <th rowspan="2">出勤時間</th>
    <th rowspan="2" width="7%">退社時間</th>

    <th colspan="6">就 業 時 間</th>

    <th rowspan="2" class="table-width">保守携帯</th>
    <th rowspan="2">処理区分</th>
    <th rowspan="2" >備考</th>
    <% if @kintai.try(:入力済) == '0' || @kintai.try(:入力済).nil? %>
      <th rowspan="2"></th>
    <% end %>
    <!--<th rowspan="2"></th>-->
    <!--<th rowspan="2"></th>-->
  </tr>
  <tr>
    <th>実労働時間</th>
    <th>遅刻早退</th>
    <th>普通残業</th>
    <th>深夜残業</th>
    <th>普通保守</th>
    <th>深夜保守</th>
  </tr>
  </thead>

  <tbody>
    <% @kintais.each do |kintai| %>
      <% add_class = 'warning' if kintai.曜日.in?(['日','土']) ||
        kintai.try(:holiday) == '1' %>
      <% add_class = 'success' if kintai.日付 == @date_now %>
      <tr id="kintai-<%= kintai.id %>" class="<%= add_class %>">
        <td  id= "date<%= kintai.id %>" ><%= kintai.日付 %></td>
        <td><%= kintai.曜日 %></td>



        <% if @kintai.入力済 == '0' || @kintai.入力済.nil? %>
       <!--    <% if kintai.出勤時刻.blank? %>
            <td id= "shukkinjikoku_text_<%= kintai.id %>" style="width: 117px;"><i class='fa fa-edit'></i></td>
          <% else %>
            <td id= "shukkinjikoku_text_<%= kintai.id %>" style="width: 117px;"><%= kintai.出勤時刻.to_s(:time) %></td>
          <%end%> -->
          <td class='kintai-item' style="white-space: pre" id="kinmutype<%= kintai.id %>" ><%= best_in_place kintai, :勤務タイプ, :as => :select, :collection => [["", ""],["001", "001"],["002", "002"],["003", "003"],["004", "004"],["005", "005"],["006", "006"],["007", "007"],["008", "008"],["009", "009"]], activator: '#kinmutype' + kintai.id.to_s,:place_holder => "<i class='fa fa-sort-desc'></i>", :inner_class => 'form_control kinmutype', id: kintai.id.to_s%></td>
          <td id= "shukkinjikoku_text_<%= kintai.id %>" style="width: 117px;"><%= kintai.出勤時刻.to_s(:time) unless kintai.出勤時刻.blank? %></td>
          <td id= "shukkinjikoku_picker_<%= kintai.id %>" style="display:none;">
            <div class="input-group timestart">
              <input  id= "shukkinjikoku<%= kintai.id %>" type="text" class="form-control input-time-start" value= <%=kintai.出勤時刻.to_s(:time) unless kintai.出勤時刻.blank? %>>
              <div class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </div>
            </div>
          </td>
      <!--     <% if kintai.退社時刻.blank? %>
            <td id= "taishajikoku_text_<%= kintai.id %>" style="width: 117px;"><i class='fa fa-edit'></i></td>
          <% else %>
            <td id= "taishajikoku_text_<%= kintai.id %>" style="width: 117px;"><%= kintai.退社時刻.to_s(:time) %></td>
          <%end%> -->
          <td id= "taishajikoku_text_<%= kintai.id %>" style="width: 117px;"><%= kintai.退社時刻.to_s(:time) unless kintai.退社時刻.blank? %></td>
          <td id= "taishajikoku_picker_<%= kintai.id %>" style="display:none;">
            <div class="input-group time">
              <input  id= "taishajikoku<%= kintai.id %>" type="text" class="form-control input-time" value= <%=kintai.退社時刻.to_s(:time) unless kintai.退社時刻.blank? %>>
              <div class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </div>
            </div>
          </td>
          <td class='kintai-item' style="white-space: pre" id="jitsuroudou<%= kintai.id %>"><%= best_in_place kintai, :実労働時間, :as => :input, activator: '#jitsuroudou' + kintai.id.to_s,:html_attrs => { size: 3 },:place_holder => "&nbsp;"%></td>
          <td class='kintai-item' style="white-space: pre" id="chikoku<%= kintai.id %>"><%= best_in_place kintai, :遅刻時間, :as => :input, activator: '#chikoku' + kintai.id.to_s,:html_attrs => { size: 3 },:place_holder => "&nbsp;"%></td>
        <!--<td><%# kintai.早退時間 %></td>-->
          <td class='kintai-item' style="white-space: pre" id="futsuzangyou<%= kintai.id %>"><%= best_in_place kintai, :普通残業時間, :as => :input, activator: '#futsuzangyou' + kintai.id.to_s,:html_attrs => { size: 3 },:place_holder => "&nbsp;"%></td>
          <td class='kintai-item' style="white-space: pre" id="shinyazangyou<%= kintai.id %>"><%= best_in_place kintai, :深夜残業時間, :as => :input, activator: '#shinyazangyou' + kintai.id.to_s,:html_attrs => { size: 3 },:place_holder => "&nbsp;"%></td>
          <td class='kintai-item' style="white-space: pre" id="fushuuhoshu<%= kintai.id %>"><%= best_in_place kintai, :普通保守時間, :as => :input, activator: '#fushuuhoshu' + kintai.id.to_s,:html_attrs => { size: 3 },:place_holder => "&nbsp;"%></td>
          <td class='kintai-item' style="white-space: pre" id="shinyahoshu<%= kintai.id %>"><%= best_in_place kintai, :深夜保守時間, :as => :input, activator: '#shinyahoshu' + kintai.id.to_s,:html_attrs => { size: 3 },:place_holder => "&nbsp;", readonly: true%></td>
          <td class='kintai-item' style="white-space: pre" id="hoshukeitai<%= kintai.id %>" ><%= best_in_place kintai, :保守携帯回数, :as => :select, :collection => [["", ""], [1, "1:保守携帯"]], activator: '#hoshukeitai' + kintai.id.to_s,:place_holder => "<i class='fa fa-sort-desc'></i>", :inner_class => 'form_control'%></td>
        <% else %>
          <td><%= kintai.勤務タイプ %></td>
          <td><%= kintai.出勤時刻.to_s(:time) unless kintai.出勤時刻.blank? %></td>
          <td><%= kintai.退社時刻.to_s(:time) unless kintai.退社時刻.blank? %></td>
          <td><%= kintai.実労働時間 %></td>
          <td><%= kintai.遅刻時間 %></td>
          <td><%= kintai.普通残業時間 %></td>
          <td><%= kintai.深夜残業時間 %></td>
          <td><%= kintai.普通保守時間 %></td>
          <td><%= kintai.深夜保守時間 %></td>
          <td> <% if kintai.保守携帯回数 == 1 %> 1:保守携帯 <% end %></td>
        <% end %>
        <td><% if !kintai.状態1.nil? %>
          <%= kintai.joutaimaster.try(:状態名) %>
          <% end %>
        </td>
        <td>
          <% if !kintai.備考.nil? && kintai.備考.length > 20%>
            <div class = "div_scoll">
          <% else %>
            <div>
          <% end %>
          <%= kintai.備考 %></div></td>
        <!--<td><%# link_to '詳細', kintai %></td>-->
        <% if @kintai.try(:入力済) == '0' || @kintai.try(:入力済).nil? %>
          <td><%= link_to '編集', edit_kintai_path(kintai) %></td>
        <% end %>
        <% msg = t "app.delete_confirm" %>
        <!--<td><%# link_to '削除', kintai, method: :delete, data: { confirm: msg } %></td>-->
      </tr>
    <% end %>
  </tbody>

</table>

<%# link_to '新規', new_kintai_path %>

<%= render 'footer', f: f%>

<% end %>

<div class="row">
  <div class="spacer">
  </div>
</div>
<legend></legend>

<h4><%=t 'app.label.import_csv'%></h4>
<%= form_tag import_kintais_path,class:'form-inline', multipart: true do %>
    <div class="form-group">
      <%= label_tag 'selectcsv', nil, class: 'sr-only' %>
      <%= file_field_tag :file , class: 'btn btn-default' %>
    </div>
    <div class="form-group">
      <%= label_tag 'importcsv', nil, class: 'sr-only' %>
      <%= submit_tag (t 'title.import_csv_btn') , class: 'btn btn-default' %>
    </div>
<% end %>

<div class="row">
  <div class="spacer">
  </div>
</div>
<legend></legend>

<button class='btn btn-primary' id='export_kintai' type= 'button'><%=(t 'title.export_csv')%></button>
<div class="row">
  <div class="spacer">
  </div>
</div>
<legend></legend>
<% if @kintai.try(:入力済) == '0' || @kintai.try(:入力済).nil? %>
  <button class='btn btn-primary' id='export_pdf' type= 'button' disabled="true"><%=(t 'app.label.export_pdf')%></button>
<% else %>
  <button class='btn btn-primary' id='export_pdf' type= 'button'><%=(t 'app.label.export_pdf')%></button>
<% end %>