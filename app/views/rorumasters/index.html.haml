= javascript_include_tag 'rorumasters'
= provide(:title, (t 'title.rorumaster'))
%ol.breadcrumb
  %li= link_to (t 'title.menu'), main_path
  %li.active ロールマスタ


%table.rorumaster-table.table.table-striped.table-bordered.table-hover{cellspacing: '0', width: '100%'}
  %thead
    %tr
      %th ロールコード
      %th ロール名
      %th 序列
     

  %tbody
    - @rorumaster.each do |rorumaster|
      %tr
        %td= rorumaster.ロールコード
        %td= rorumaster.ロール名
        %td= rorumaster.序列
        

- msg_select = t 'app.select_confirm'
- msg_confirm = t 'app.delete_confirm'
- new_text = t 'title.new'
- edit_text = t 'title.edit'
- delete_text = t 'title.delete'
.span#message_confirm_select{hidden: :true} #{msg_select}
.span#message_confirm_delete{hidden: :true} #{msg_confirm}
%button.btn.btn-primary#new_rorumaster{type: :button} #{new_text}
%button.btn.btn-primary#edit_rorumaster{type: :button} #{edit_text}
%button.btn.btn-primary#destroy_rorumaster{type: :button} #{delete_text}

%h4=t 'app.label.import_csv'
= form_tag import_rorumasters_path,class:'form-inline', multipart: true do
  .form-group
    = label_tag 'selectcsv', nil, class: 'sr-only'
    = file_field_tag :file , class: 'btn btn-default'
  .form-group
    = label_tag 'importcsv', nil, class: 'sr-only'
    = submit_tag (t 'title.import_csv_btn') , class: 'btn btn-default'

= render 'roru_new_modal'
= render 'roru_edit_modal'