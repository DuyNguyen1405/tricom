= javascript_include_tag 'settings'
= provide(:title, (t 'title.setting'))
%ol.breadcrumb
  %li= link_to (t 'title.menu'), main_path
  %li.active Setting

%br

%table.setting-table.table.table-striped.table-bordered.table-hover{cellspacing: '0', width: '100%'}
  %thead
    %tr
      %th 社員番号
      %th ScrollTime
      %th Local
      %th Vietnamese Holidays
      %th Turning data

  %tbody
    - @setting.each do |setting|
      %tr
        %td= setting.社員番号
        %td= setting.scrolltime
        %td= setting.local
        %td= setting.select_holiday_vn
        %td= setting.turning_data


= render 'share/new_edit_destroy_buttons',object: 'setting',new_path: new_setting_path

%h4=t 'app.label.import_csv'
= form_tag import_settings_path,class:'form-inline', multipart: true do
  .form-group
    = label_tag 'selectcsv', nil, class: 'sr-only'
    = file_field_tag :file , class: 'btn btn-default'
  .form-group
    = label_tag 'importcsv', nil, class: 'sr-only'
    = submit_tag (t 'title.import_csv_btn') , class: 'btn btn-default'
