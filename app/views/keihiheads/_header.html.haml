.row-fuid
  = f.label :申請日付

  = f.input :日付, label: false,as: :date_time_picker,:input_html => { :size => 10}
  = f.label :申請番号
  = f.input_field :申請番号, class: 'form-control', disabled: true
  .pull-right
    - if mode == :edit
      %button.btn.btn-primary#pdf_show_keihihead{type: :button} #{t 'app.label.export_pdf'}
    - msg = t 'app.delete_confirm'
    = f.button :submit, (t 'helpers.submit.create'), class: 'btn-primary keihihead-update'
    = f.button :submit, (t 'helpers.submit.destroy'), class: 'btn-primary', :data => { :confirm => msg } if mode == :edit
.spacer