
<h1 style="text-align: center;" ><%=(t 'title.keihi')%></h1>
<%= simple_form_for @keihi, html: {class:'form-inline'} do |f| %>

    <!--header-->
    <div class="form-group">
      <%= label_tag 'label1','起票者:　' << @keihi.shainmaster_氏名 << '　' %>
      <%= label_tag 'label2','日付: ' << @keihi.日付.to_s << '　'%>
      <%= label_tag 'label3','申請番号: ' << @keihi.申請番号 << '　'%>
    </div><br>





    <table id="keihi-table-show" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%" style="font-size: 12px; border-left: 1px solid #000; border-right: 1px solid #000">
      <thead style="display: table-header-group">
        <tr style="page-break-inside: avoid;">
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">日付</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">相手先名</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" colspan="6">　旅　費　交　通　費　</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">その他</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">JobNo</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">備考</th>
          <th style=" border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">領収書</th>
        </tr>
        <tr style="page-break-inside: avoid;">
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000;">機関名</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000;">発</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000;">着</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000;">交通費</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000;">日当</th>
          <th style="border-right: 1px solid #000; border-bottom: 1px solid #000;">宿泊</th>
        </tr>
      </thead>
      <tbody>
        <% @keihi.keihibodies.each do |body| %>
            <tr style="page-break-inside: avoid;">
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.日付 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.相手先 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.機関名 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.発 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.着 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.交通費 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.日当 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.宿泊費 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.その他 %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.JOB %></td>
              <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.備考 %></td>
              <td style=" border-bottom: 1px solid #000"><%= body.領収書kubun %></td>
            </tr>
        <% end %>
      </tbody>
    </table><br>

    <div class="form-group">
      <%= label_tag 'label','交通費合計: ' << @keihi.交通費合計 << '　' %>
      <%= label_tag 'label','日当合計: ' << @keihi.日当合計 << '　'%>
      <%= label_tag 'label','宿泊費合計: ' << @keihi.宿泊費合計 << '　'%>
      <%= label_tag 'label','旅費交通費合計: ' << @keihi.旅費合計 << '　'%>

    </div><br>
    <div class="form-group">

      <%= label_tag 'label','その他合計: ' << @keihi.その他合計 << '　'%>
      <%= label_tag 'label','仮払金: ' << @keihi.仮払金 << '　'%>
      <%= label_tag 'label','宿泊費合計: ' << @keihi.宿泊費合計 << '　'%>
      <%= label_tag 'label','過不足: ' << @keihi.過不足 << '　'%>
      <%= label_tag 'label','支給品: ' << @keihi.支給品 << '　'%>
    </div><br>

    <div class="form-group">

      <%= label_tag 'label','経費合計: ' << @keihi.合計 << '　'%>
      <%= label_tag 'label','承認要求: ' << @keihi.承認kubun << '　'%>
      <% shoninsha = '' %>
      <% shoninsha = (Shainmaster.find_by id: @keihi.承認者).try(:氏名) unless @keihi.承認者.empty? %>
      <%= label_tag 'label','承認者: ' << shoninsha << '　'%>
      <%= label_tag 'label','清算予定日: ' << @keihi.清算予定日.to_s << '　'%>

    </div><br>
<% end %>
