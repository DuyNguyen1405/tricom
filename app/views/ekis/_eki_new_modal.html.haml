.modal#eki-new-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel 駅新規
      .modal-body
        = simple_form_for @eki, url: create_eki_ekis_path, :remote => true do |f|
          = f.input :駅コード
          = f.input :駅名
          = f.input :駅名カナ
          = f.button :submit, class: 'btn btn-primary'