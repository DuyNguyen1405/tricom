= javascript_include_tag 'yuusens_test'
= provide(:title, (t 'title.yuusen'))
%ol.breadcrumb
  %li= link_to (t 'title.menu'), main_path
  %li.active=(t 'title.yuusen')

%table.yuusen-table.table.table-striped.table-bordered.table-hover{cellspacing:0, width: '100%'}
  %thead
    %tr
      
      %th 優先さ
      %th 色
      %th 備考
      

  %tbody
    - @yuusens.each do |yuusen|
      %tr
        
        %td= yuusen.優先さ
        %td{:style => "background-color:"+yuusen.try(:色).to_s}= yuusen.色
        %td= yuusen.備考
        

%br

= render 'share/new_edit_destroy_buttons',object: 'yuusen',new_path: new_yuusen_path

- if can? :update, @yuusens
  %h4=t 'app.label.import_csv'
  = form_tag import_yuusens_path,class:'form-inline', multipart: true do
    .form-group
      = label_tag 'selectcsv', nil, class: 'sr-only'
      = file_field_tag :file , class: 'btn btn-default'
    .form-group
      = label_tag 'importcsv', nil, class: 'sr-only'
      = submit_tag (t 'title.import_csv_btn') , class: 'btn btn-default'